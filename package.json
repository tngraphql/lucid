{
  "name": "@tngraphql/lucid",
  "version": "1.0.1",
  "description": "SQL ORM built on top of Active Record pattern",
  "main": "build/src/Database/index.d.ts",
  "files": [
    "build/adonis-typings",
    "build/console",
    "build/providers",
    "build/config",
    "build/src",
    "build/templates"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test:sqlite": "DB=sqlite node japaFile.js",
    "test:mysql": "node japaFile.js",
    "test:pg": "node japaFile.js",
    "test:docker": "npm run test:sqlite && npm run test:mysql && npm run test:pg",
    "test": "docker-compose -f docker-compose.yml -f docker-compose-test.yml build && docker-compose -f docker-compose.yml -f docker-compose-test.yml run --rm test",
    "lint": "eslint . --ext=.ts",
    "clean": "del build",
    "compile": "npm run clean && tsc && npm run copy:files && npm run copy:stub",
    "copy:files": "copyfiles \"templates/**/*.txt\" build",
    "copy:stub": "copyfiles \"**/*.stub\" build",
    "build": "npm run compile",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build",
    "dev": "ts-node-dev example/index.ts"
  },
  "directories": {
    "example": "example",
    "test": "test"
  },
  "dependencies": {
    "@poppinss/hooks": "^1.0.3",
    "@poppinss/utils": "^2.1.2",
    "camelcase": "^5.3.1",
    "chance": "^1.1.4",
    "cli-table3": "^0.5.1",
    "knex": "^0.20.11",
    "knex-dynamic-connection": "^1.0.4",
    "log-update": "^4.0.0",
    "luxon": "^1.22.0",
    "macroable": "^4.0.2",
    "pluralize": "^8.0.0",
    "pretty-hrtime": "^1.0.3",
    "snake-case": "^3.0.3"
  },
  "peerDependencies": {
    "@adonisjs/core": ">=5.0.0-preview"
  },
  "devDependencies": {
    "@adonisjs/ace": "^6.8.3",
    "@adonisjs/application": "^1.3.9",
    "@adonisjs/core": "^5.0.0-preview.2",
    "@adonisjs/fold": "^6.3.3",
    "@adonisjs/mrm-preset": "^2.2.4",
    "@poppinss/dev-utils": "^1.0.4",
    "@types/dotenv": "^8.2.0",
    "@types/luxon": "^1.21.0",
    "@types/node": "^13.9.0",
    "@types/pluralize": "0.0.29",
    "clone": "^2.1.2",
    "commitizen": "^4.0.3",
    "copyfiles": "^2.2.0",
    "cz-conventional-changelog": "^3.1.0",
    "del-cli": "^3.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-adonis": "^1.0.8",
    "husky": "^4.2.3",
    "japa": "^3.0.1",
    "mrm": "^2.1.0",
    "mysql": "^2.18.1",
    "np": "^5.2.1",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.1.1",
    "tn-illuminate": "^1.0.23",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "author": "Nguyenpl117,TNGraphQL",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tngraphql/lucid.git"
  },
  "bugs": {
    "url": "https://github.com/tngraphql/lucid/issues"
  },
  "homepage": "https://github.com/tngraphql/lucid#readme"
}
