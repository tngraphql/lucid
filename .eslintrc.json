{
  "extends": [
    "plugin:adonis/typescriptPackage"
  ],
  "rules": {
    "max-len": ["error", {
      "code": 120,
      "comments": 120,
      "ignoreUrls": true,
      "ignoreTemplateLiterals": true
    }],
    "@typescript-eslint/explicit-function-return-type": ["off"],
    "@typescript-eslint/require-await": ["off"]
  }
}
